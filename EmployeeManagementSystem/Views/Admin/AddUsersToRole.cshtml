@model List<UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}

<form method="post" asp-action="AddUsersToRole" asp-route-roleid="@roleId">
    <table class="table">
        <thead>
            <tr>
                <th>
                    UserId
                </th>
                <th>
                    Username
                </th>
            </tr>
        </thead>
        <tbody>            
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => @Model[i].UserId)
                            <input type="hidden" asp-for="@Model[i].UserId" />
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => Model[i].Username)
                            <input type="hidden" asp-for="@Model[i].Username" />
                        </td>
                        <td>
                            <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                            <label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].Username</label>
                        </td>
                    </tr>
                }
        </tbody>
    </table>    
    <input type="submit" value="Add to Role" class="btn btn-primary" style="width:auto" />   
</form>